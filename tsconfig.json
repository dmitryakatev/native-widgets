{
    "compilerOptions": {
        "target": "es5",
        "baseUrl": ".",
        "allowJs": true,
        "lib": [ "es2015", "es2017", "dom" ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "paths": {
            "core": ["./src/core/index"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}